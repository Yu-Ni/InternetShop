function getCommByType() {
	$.ajax({
		data : {
			typename : '女装男装'
		},
		url : 'buyerController/selectByTypeName.do',
		type : 'post',
		dataType : 'json',
		success : function(msg) {
			var obj = msg;
			Show("clothesShow", obj);
		}
	});
}
