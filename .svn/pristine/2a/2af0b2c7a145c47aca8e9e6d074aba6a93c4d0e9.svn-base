	@Override
	public void delete(String adminids) {
		// TODO Auto-generated method stub
		String id= "";
		String ids[] = adminids.split(",");
		
		for(int i=0;i<ids.length;i++){
			id+="'"+ids[i]+"',";
		}
		id=id.substring(0, id.length()-1);
		id="("+id+")";
		dao.delete(id);
		
	}

	@Override
	public void update(Admin admin) {
		// TODO Auto-generated method stub
		dao.update(admin);
		
	}
	
	
