<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cqut.model.dao.NoticeDao">
	
	<!-- 结果集映射 -->
	<resultMap type="com.cqut.model.pojo.Notice" id="t_notice">
		<id property="noticeid" column="noticeid"/>
		<result property="title" column="title"/>
		<result property="username" column="username"/>
		<result property="theme" column="theme"/>
		<result property="content" column="content"/>
		<result property="noticetime" column="noticetime"/>
	</resultMap>

	
	<!-- 查询 -->
	<select id="getNoticeByCondition" resultMap="t_notice" parameterType="String">
		select * from t_notice where title like #{input}
	</select>
	<!-- 增加 -->
	<insert id="insert">
		insert into t_notice(noticeid,title,username,theme,content,noticetime) values(#{noticeid},#{title},#{username},#{theme},#{content},#{noticetime})
	</insert>
	<!-- 删除 -->
	<delete id="delete">
		delete from t_notice where noticeid = #{noticeid}
	</delete>
	
	<!-- 修改 -->
	<update id="update">
		update t_notice set title=#{title},username=#{username},theme=#{theme},content=#{content},noticetime=#{noticetime} where noticeid=#{noticeid} 
	</update> 
</mapper>